rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Admin status is granted if a document with the user's UID exists in the /roles_admin collection.
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /houses/{houseId} {
      // Anyone can read house data.
      allow read: if true;

      // Only administrators can create, update, or delete houses.
      allow write: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      // Allow a user to read their own admin status document to check for admin privileges.
      allow get: if request.auth != null && request.auth.uid == userId;

      // Disallow listing the collection or writing to it from the client.
      // Admin roles must be managed from the Firebase Console for security.
      allow list, write: if false;
    }
  }
}
